@model TestScaff.Models.ReportsViewModel

@{
    ViewBag.Title = "ReportPage";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Reports Dashboard</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="style.css">
    <style>
        /* General Page Styling */
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
            color: #333;
        }

        .container {
            max-width: 1200px;
        }

        /* Card Styles */
        .card {
            border-radius: 10px;
            margin-bottom: 1.5rem;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .card-title {
            font-weight: 600;
            color: #007bff;
        }

        .card-header {
            background-color: #007bff;
            color: #fff;
            border-radius: 10px 10px 0 0;
            padding: 15px;
        }

        .card-body {
            padding: 20px;
        }

        /* Report Graph Placeholder */
        .report-graph {
            background-color: #e9ecef;
            border-radius: 8px;
            min-height: 250px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        /* Table Styling */
        .table {
            margin-bottom: 0;
        }

        .table-hover tbody tr:hover {
            background-color: #f1f1f1;
        }

        .table thead th {
            background-color: #007bff;
            color: white;
            font-weight: 600;
            text-align: center;
        }

        .table tbody td {
            text-align: center;
            vertical-align: middle;
            color: #333;
            padding: 15px;
        }

        /* Button Styling */
        .btn-primary {
            background-color: #007bff;
            border: none;
            width: 100%;
        }

            .btn-primary:hover {
                background-color: #0056b3;
            }

        .btn-success, .btn-danger {
            width: 45%;
            padding: 5px;
            margin: 5px;
        }

        .btn-success {
            background-color: #28a745;
            border: none;
        }

            .btn-success:hover {
                background-color: #218838;
            }

        .btn-danger {
            background-color: #dc3545;
            border: none;
        }

            .btn-danger:hover {
                background-color: #c82333;
            }
    </style>
</head>
<body>

    <div class="container my-4">
        <h2 class="text-center mb-4">Report Dashboard</h2>

        <!-- Report Generation Section -->
        <div class="card shadow-sm">
            <div class="card-header">
                <h5 class="mb-0">Generate Report</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <!-- Graphical Component Placeholder -->
                    <div class="col-md-8">
                        <div class="report-graph">
                            <p>Graphical component will be displayed here.</p>
                        </div>
                    </div>

                    <!-- Save Report Section -->
                    <div class="col-md-4">
                        <h6>Save Report</h6>
                        <form>
                            <div class="mb-3">
                                <label for="filename" class="form-label">Filename</label>
                                <input type="text" id="filename" class="form-control" placeholder="Enter filename">
                            </div>
                            <div class="mb-3">
                                <label for="fileType" class="form-label">File Type</label>
                                <select id="fileType" class="form-select">
                                    <option value="pdf">PDF</option>
                                    <option value="xlsx">Excel</option>
                                    <option value="csv">CSV</option>
                                </select>
                            </div>
                            <button type="submit" class="btn btn-primary">Save Report</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <!-- Popular Genres Section -->
        <div class="card shadow-sm">
            <div class="card-header">
                <h4 class="mb-0">Popular Genres</h4>
            </div>
            <div class="card-body">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Genre</th>
                            <th>Borrow Count</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var genre in Model.PopularGenres)
                        {
                            <tr>
                                <td>@genre.Genre</td>
                                <td>@genre.BorrowCount</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Top 5 Books Section -->
        <div class="card shadow-sm">
            <div class="card-header">
                <h4 class="mb-0">Top 5 Most Popular Books</h4>
            </div>
            <div class="card-body">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Book Title</th>
                            <th>Borrow Count</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var book in Model.Top5Books)
                        {
                            <tr>
                                <td>@book.Title</td>
                                <td>@book.BorrowCount</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Archive Section -->
        <div class="card shadow-sm">
            <div class="card-header">
                <h4 class="mb-0">Archive</h4>
            </div>
            <div class="card-body">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Filename</th>
                            <th>File Type</th>
                            <th>Date Saved</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <!-- Sample Data Rows -->
                        <tr>
                            <td>OverdueBooksReport</td>
                            <td>PDF</td>
                            <td>2024-11-01</td>
                            <td>
                                <button class="btn btn-success">Download</button>
                                <button class="btn btn-danger">Delete</button>
                            </td>
                        </tr>
                        <tr>
                            <td>CurrentLoansReport</td>
                            <td>Excel</td>
                            <td>2024-10-28</td>
                            <td>
                                <button class="btn btn-success">Download</button>
                                <button class="btn btn-danger">Delete</button>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
</body>
</html>
